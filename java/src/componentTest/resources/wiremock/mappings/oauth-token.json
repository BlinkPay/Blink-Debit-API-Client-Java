{
  "request": {
    "method": "POST",
    "url": "/oauth2/token",
    "bodyPatterns": [
      {
        "matches": ".*grant_type=client_credentials.*"
      }
    ]
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "access_token": "mock-access-token-for-testing",
      "token_type": "Bearer",
      "expires_in": 3600
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}